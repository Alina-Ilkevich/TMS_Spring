<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <bean id="read" class="org.example.ReadingNews" scope="prototype">
        <property name="message" value="The news has been read"/>
    </bean>
    <bean id="feed" class="org.example.PetFeeding" scope="prototype">
        <property name="message" value="The dog is fed"/>
    </bean>
</beans>